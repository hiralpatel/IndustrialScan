<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/round_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#60A0A0A0"
                android:centerColor="#D0A0A0A0"
                android:endColor="#60A0A0A0"
                android:angle="270"
                />
            <stroke
                android:color="#ff878787" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#A0000000"
                android:centerColor="#D0000000"
                android:endColor="#A0000000"
                android:angle="270"
                />
            <stroke
                android:color="#ff36ff4c" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>